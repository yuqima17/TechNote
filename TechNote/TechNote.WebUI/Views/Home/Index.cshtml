
@model TechNote.Core.ViewModels.NoteListViewModel

@{
    ViewBag.Title = "Home";
}







<div class="col-md-3" style="padding:0">
    <div class="nav flex-column " style="background-color:black;margin-top:0px">
        <li class="nav-item">
            <a href="@Url.Action("Index","Home",new { codingLanguage = Request["codingLanguage"] })" class="a-nav-item">All</a>

        </li>


        @foreach (var i in Model.noteTypes)
        {

            <li class="nav-item">
                <a href="@Url.Action("Index","Home",new { noteType = i.Name,codingLanguage = Request["codingLanguage"] })" class="a-nav-item">@i.Name</a>


            </li>
        }
    </div>
</div>



<div class="col-md-9">
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item" style="display:inline"><a href="@Url.Action("Index","Home",new { noteType=Request["noteType"]})">All</a></li>

        @foreach (var item in Model.codingLanguages)
        {
            <li class="list-group-item" style="display:inline"><a href="@Url.Action("Index","Home",new { codingLanguage = item.Name, noteType = Request["noteType"]})">@item.Name</a></li>
        }

    </ul>
    <table class="table">

        @for (int i = Model.notes.Count - 1; i >= 0; i--)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => Model.notes[i].dateModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.notes[i].Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.notes[i].Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.notes[i].NoteContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.notes[i].Id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.notes[i].Id }) |
                    @Html.ActionLink("Details", "Details", new { id = Model.notes[i].Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.notes[i].Id })
                </td>
            </tr>
        }

    </table>

</div>
<ul class="nav navbar-nav">
    <li>
        @Html.ActionLink("Coding Languages", "Index", "CodingLanguageManager")
    </li>
    <li>@Html.ActionLink("Types", "Index", "NoteType")</li>


</ul>
